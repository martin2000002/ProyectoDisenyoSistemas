# DockerfileClient para la Aplicación Cliente
FROM openjdk:24
WORKDIR /app
COPY ./src ./src
RUN mkdir -p classes && \
    javac -d ./classes ./src/model/*.java ./src/client/EmployeeClient.java
EXPOSE 8080
# Mantener el contenedor ejecutándose
CMD ["sh", "-c", "echo 'Cliente listo para ser usado. Ejecuta: docker exec -it proyecto-client-1 java -cp ./classes client.EmployeeClient"]